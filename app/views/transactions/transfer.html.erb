<div class="container">
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <h6 class="m-0 font-weight-bold text-primary">Transfer Money</h6>
    </div>
    <div class="card-body">
      <%= form_with url: transfer_transactions_path, method: :post, local: true, class: "user" do |f| %>
        <!-- Select recipient -->
        <div class="form-group">
          <%= f.label :target_wallet_id, "Recipient", class: "form-label" %>
          <%= f.select :target_wallet_id, 
            options_from_collection_for_select(@targets, :id, :name), 
            { prompt: "Select recipient" }, 
            class: "form-control" %>
        </div>
        
        <div class="form-group">
          <%= f.label :amount, "Transfer Amount", class: "form-label" %>
          <%= f.text_field :amount, class: "form-control currency", placeholder: "Enter amount", data: { autonumeric: true } %>
        </div>

        <div class="form-group">
          <%= f.label :description, "Description (optional)", class: "form-label" %>
          <%= f.text_area :description, class: "form-control", rows: 3, placeholder: "E.g., Adding funds for future purchases" %>
        </div>
        <%= f.hidden_field :wallet_id, value: @current_user.wallet.id %>

        <div class="form-group">
          <%= f.submit "Transfer", class: "btn btn-primary btn-user btn-block" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
