<body class="bg-gradient-primary">
  <div class="container">
    <!-- Outer Row -->
    <div class="row justify-content-center">
      <div class="col-xl-10 col-lg-12 col-md-9">
        <div class="card o-hidden border-0 shadow-lg" style="margin-top: 10rem;">
          <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="p-5">
              <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Welcome!</h1>
              </div>
              
              <%= form_with url: login_path, method: :post, class: "user" do |f| %>
                <div class="form-group">
                  <%= f.email_field :email, class: "form-control form-control-user", 
                      id: "exampleInputEmail", placeholder: "Enter Email Address...", 
                      aria: { describedby: "emailHelp" } %>
                </div>
                
                <div class="form-group">
                  <%= f.password_field :password, class: "form-control form-control-user", 
                      id: "exampleInputPassword", placeholder: "Password" %>
                </div>
                
                <%= f.submit "Login", class: "btn btn-primary btn-user btn-block" %>
              <% end %>
            </div>            
          </div>
        </div>
      </div>
    </div>
  </div>
</body>